@page
@using Microsoft.EntityFrameworkCore
@using Microsoft.EntityFrameworkCore.ChangeTracking
@model InventoryControlPages.UserModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using AlmacenSQLiteEntities;
@using AlmacenDataContext;
@using InventoryControl.UI;

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Inventory</title>
    <link rel="stylesheet" href="~/styles.css">
    <script src="~/script.js" defer></script>
</head>
<body>
    <div class="welcome-init">
        <div class="titles">
            <p id="bienvenida">Bienvenido al Almacen</p>
        </div>
        <div id="loginFormContainer" class="form-container">
            <br>
            <p id="in" onclick="toggleForm('loginForm')">Log In</p>
            <div class="insert-database">
                <div id="loginForm" class="form">
                    <p>Inicie sesión</p>
                    <form method="POST">
                        <div class="fields-table">
                            <input asp-for="Usuario.Usuario1" placeholder="Nombre de Usuario" class="form-control">
                            <span asp-validation-for="Usuario.Usuario1" class="text-danger"></span>
                            <input asp-for="Usuario.Password" placeholder="Contraseña" class="form-control">
                            <span asp-validation-for="Usuario.Password" class="text-danger"></span>
                            <input id="enviar" type="submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>

        <div id="signinFormContainer" class="form-container">
            <br>
            <p onclick="toggleForm('signinForm')">Sign In</p>
            <div class="insert-database">
                <div id="signinForm" class="form">
                    <p>Registre su Usuario</p>
                    <form method="POST" asp-page-handler="SignIn">
                        <div class="fields-table">
                            <input type="number" asp-for="Person.Registro" placeholder="Registro" class="form-control">
                            <span asp-validation-for="Person.Registro" class="text-danger"></span>
                            <input type="text" asp-for="Person.Nombre" placeholder="Nombre" class="form-control">
                            <span asp-validation-for="Person.Nombre" class="text-danger"></span>
                            <input type="text" asp-for="Person.ApellidoPaterno" placeholder="Apellido paterno" class="form-control">
                            <span asp-validation-for="Person.ApellidoPaterno" class="text-danger"></span>
                            <input type="text" asp-for="Person.ApellidoMaterno" placeholder="Apellido materno" class="form-control">
                            <span asp-validation-for="Person.ApellidoMaterno" class="text-danger"></span>
                            <input type="number" asp-for="Person.Semestre" placeholder="Semestre" class="form-control">
                            <span asp-validation-for="Person.Semestre" class="text-danger"></span>
                            <input type="text" asp-for="Person.GrupoID" placeholder="Grupo" class="form-control">
                            <span asp-validation-for="Person.GrupoID" class="text-danger"></span>
                            <input type="email" asp-for="Person.Correo" placeholder="Correo" class="form-control">
                            <span asp-validation-for="Person.Correo" class="text-danger"></span>
                            <input type="number" asp-for="Person.plantel" placeholder="Plantel" class="form-control">
                            <span asp-validation-for="Person.plantel" class="text-danger"></span>
                            <input id="enviar" type="submit" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    
</body>
</html>