                        <span asp-validation-for="marca.Descripcion" class="text-danger"></span>

                        <input type="hidden" name="almacenistaId" value="@Model.almacenista.AlmacenistaId" />
                        <input id="enviar" type="submit" />
                    </div>
                </form>
            </div>
        </div>
        <div class="table-database">
