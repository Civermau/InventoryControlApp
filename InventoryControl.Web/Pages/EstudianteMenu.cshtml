@page
@using Microsoft.EntityFrameworkCore
@using Microsoft.EntityFrameworkCore.ChangeTracking
@model InventoryControlPages.EstudianteModel
@addTagHelper *,Microsoft.AspNetCore.Mvc.TagHelpers
@using AlmacenSQLiteEntities;
@using AlmacenDataContext;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/styles.css">
    <script src="~/script.js" defer></script>
    <title>Usuarios</title>
</head>
<body>
    <div class="titles">
        <h1 id="Inicio">Bienvenido, @TempData["UserName"]</h1>
        <p>Estudiantes</p>
    </div>
        <div class="titles">
            <h1>Pedidos Actuales</h1>
        </div>
        <div class="table-database">
            <table border="1">
                <thead>
                    <tr>
                        <td><p>Id</p></td>
                        <td><p>Laboratorio</p></td>
                        <td><p>Hora de entrega</p></td>
                        <td><p>Hora de devolucion</p></td>
                        <td><p>Docente</p></td>
                        <td><p>Estado</p></td>
                        <td><p>Material</p></td>
                        <td><p>Cantidad</p></td>
                    </tr>
                </thead>
                <tbody>
                    @{using(Almacen db = new ()){
                            IQueryable<DescPedido>? descPedidos = db.DescPedidos.Include(d => d.Pedido).Include(d => d.Material).Where(d => d.Pedido.EstudianteId == Model.estudiante.EstudianteId && d.Pedido.Fecha.Value.Date > DateTime.Now.Date).OrderBy(d => d.Pedido.Fecha);
                                if(descPedidos is null || !descPedidos.Any()){
                                    return;
                                }
                                else{
                                    foreach(var p in descPedidos){
                                    <tr>
                                        <td id="id">@p.Pedido.PedidoId</td>
                                        <td id="campos">@p.Pedido.Laboratorio.Nombre</td>
                                        <td id="campos">@p.Pedido.HoraEntrega</td>
                                        <td id="campos">@p.Pedido.HoraDevolucion</td>
                                        <td id="campos">@p.Pedido.Docente.Nombre</td>
                                        <td id="campos">@p.Pedido.Estado</td>
                                        <td id="campos">@p.Material.Categoria.Nombre</td>
                                        <td id="campos">@p.Cantidad</td>
                                    </tr>
                                }
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
        <div class="titles">
            <h1 id="Pedido">Hacer un pedido</h1>
        </div>
        <div class="insert-database">
            <div>
                <p>Nuevo pedido</p>
                <form method="POST" onsubmit="recargarPagina()">
                    <div class="fields-table">
                        <input asp-for="pedido.Fecha" placeholder="Fecha" class="form-control">
                        <span asp-validation-for="pedido.Fecha" class="text-danger"></span>

                        <input asp-for="pedido.LaboratorioId" placeholder="Laboratorio" class="form-control" required>
                        <span asp-validation-for="pedido.LaboratorioId" class="text-danger"></span>

                        <input asp-for="pedido.HoraEntrega" placeholder="HoraEntrega" class="form-control" required>
                        <span asp-validation-for="pedido.HoraEntrega" class="text-danger"></span>

                        <input asp-for="pedido.HoraDevolucion" placeholder="HoraDevolucion" class="form-control" required>
                        <span asp-validation-for="pedido.HoraDevolucion" class="text-danger"></span>

                        <input asp-for="pedido.DocenteId" placeholder="Docente" class="form-control" required>
                        <span asp-validation-for="pedido.DocenteId" class="text-danger"></span>

                        <input asp-for="descPedido.Cantidad" placeholder="Cantidad" class="form-control" required>
                        <span asp-validation-for="descPedido.Cantidad" class="text-danger"></span>

                        <input asp-for="descPedido.MaterialId" placeholder="Material" class="form-control" required>
                        <span asp-validation-for="descPedido.MaterialId" class="text-danger"></span>

                        <select id="list" asp-for="pedido.EstudianteId" class="fields-table" required>
                            <option value="">Selecciona un semestre</option>
                            <option value=@Model.estudiante.EstudianteId>@Model.estudiante.EstudianteId</option>
                        </select>
                        <span asp-validation-for="pedido.EstudianteId" class="text-danger"></span>

                        <input id="enviar" type="submit" />
                    </div>
                </form>
            </div>
        </div>
        <div class="titles">
            <h1 id="Historial">Historial de Solicitudes</h1>
        </div>
        <div class="table-database">
            <table border="1">
                <thead>
                    <tr>
                        <td><p>Id</p></td>
                        <td><p>Laboratorio</p></td>
                        <td><p>Hora de entrega</p></td>
                        <td><p>Hora de devolucion</p></td>
                        <td><p>Docente</p></td>
                        <td><p>Estado</p></td>
                        <td><p>Material</p></td>
                        <td><p>Cantidad</p></td>
                    </tr>
                </thead>
                <tbody>
                    @{using(Almacen db = new ()){
                            IQueryable<DescPedido>? descPedidos = db.DescPedidos.Include(d => d.Pedido).Include(d => d.Material).Where(d => d.Pedido.EstudianteId == Model.estudiante.EstudianteId && d.Pedido.Fecha.Value.Date < DateTime.Now.Date).OrderBy(d => d.Pedido.Fecha);
                                if(descPedidos is null || !descPedidos.Any()){
                                    return;
                                }
                                else{
                                    foreach(var p in descPedidos){
                                    <tr>
                                        <td id="id">@p.Pedido.PedidoId</td>
                                        <td id="campos">@p.Pedido.Laboratorio.Nombre</td>
                                        <td id="campos">@p.Pedido.HoraEntrega</td>
                                        <td id="campos">@p.Pedido.HoraDevolucion</td>
                                        <td id="campos">@p.Pedido.Docente.Nombre</td>
                                        <td id="campos">@p.Pedido.Estado</td>
                                        <td id="campos">@p.Material.Categoria.Nombre</td>
                                        <td id="campos">@p.Cantidad</td>
                                    </tr>
                                }
                            }
                        }
                    }
                </tbody>
            </table>
        </div>
</body>
</html>